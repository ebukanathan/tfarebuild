---
import { Image } from "astro:assets";
import EnrolModal from "./EnrolModal";
import CourseButton from "./CourseButton.jsx";


interface Props {
    image: string;
    heading?: string;
    desOne?: string;  
    desTwo?: string; 
    
}


const { image,heading,desOne,desTwo } = Astro.props;
---

<main>
    <section class="bg-white py-20 px-6 md:px-16">
        <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-10 items-center">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-amber-700 mb-6">
             {heading}
            </h1>
            <p class="text-lg text-gray-600 mb-4">
                {desOne}
            </p>
            <p class="text-lg text-gray-600 mb-6">
             {desTwo}
            </p>
           
            <div class="items-left">
                <CourseButton client:load/>
            </div>
          </div>

          <div class=" w-full h-96 overflow-hidden">
            <Image
              src={image}
              alt="Shoemaking Training"
              class=" h-full rounded-2xl shadow-lg"
              width={500}
              height={400}
            />
          </div>
        </div>
      </section>
</main>