---
let isMenuOpen = false;
---

<nav
  id="navbar"
  class="fixed top-0 left-0 w-full bg-white/80 backdrop-blur-md transition-all duration-300 z-50"
>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-20 transition-all duration-300"
    id="navbar-inner"
  >
    <!-- Logo -->
    <a
      href="/"
      id="navbar-logo"
      class="text-3xl font-bold text-blue-600 transition-all duration-300"
    >
      MyWebsite
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex space-x-8 items-center">
      <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
      <a href="/About" class="text-gray-700 hover:text-blue-600">About</a>

      <!-- Dropdown -->
      <div class="relative group">
        <button class="flex items-center space-x-1 text-gray-700 hover:text-blue-600">
          <span>Services</span>
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <div
          class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-md opacity-0 group-hover:opacity-100 invisible group-hover:visible transition-all duration-200"
        >
          <a href="/web" class="block px-4 py-2 hover:bg-gray-100">Web Development</a>
          <a href="/design" class="block px-4 py-2 hover:bg-gray-100">UI/UX Design</a>
          <a href="/marketing" class="block px-4 py-2 hover:bg-gray-100">Digital Marketing</a>
        </div>
      </div>

      <a href="/contact" class="text-gray-700 hover:text-blue-600">Contact</a>
    </div>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button
        class="text-gray-700 hover:text-blue-600 focus:outline-none"
        onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white shadow-lg">
    <a href="/" class="block px-4 py-2 border-b hover:bg-gray-100">Home</a>
    <a href="/About" class="block px-4 py-2 border-b hover:bg-gray-100">About</a>

    <details class="border-b">
      <summary class="px-4 py-2 cursor-pointer hover:bg-gray-100">Services</summary>
      <div class="pl-4">
        <a href="/web" class="block px-4 py-2 hover:bg-gray-100">Web Development</a>
        <a href="/design" class="block px-4 py-2 hover:bg-gray-100">UI/UX Design</a>
        <a href="/marketing" class="block px-4 py-2 hover:bg-gray-100">Digital Marketing</a>
      </div>
    </details>

    <a href="/contact" class="block px-4 py-2 hover:bg-gray-100">Contact</a>
  </div>
</nav>

<!-- Smooth Shrink on Scroll Script -->
<script>
  window.addEventListener("scroll", () => {
    const navbar = document.getElementById("navbar");
    const inner = document.getElementById("navbar-inner");
    const logo = document.getElementById("navbar-logo");

    if (window.scrollY > 10) {
      navbar.classList.add("shadow-md", "bg-white/90");
      inner.classList.replace("h-20", "h-14");
      logo.classList.replace("text-3xl", "text-2xl");
    } else {
      navbar.classList.remove("shadow-md", "bg-white/90");
      inner.classList.replace("h-14", "h-20");
      logo.classList.replace("text-2xl", "text-3xl");
    }
  });
</script>
