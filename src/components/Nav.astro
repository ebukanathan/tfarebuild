---
import { Icon } from "astro-icon";
let isMenuOpen = false;
---

<nav class="bg-linear-to-r from-yellow-200 to-blue-900 shadow-md  backdrop-blur-md  z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4  sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl  font-bold text-blue-600">TFA</a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8 items-center font-medium">
        <a href="/" class="text-gray-700 hover:text-blue-600 ">Home</a>
        <a href="/about" class="text-gray-700 hover:text-blue-600">About</a>

        <!-- Dropdown Menu -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-gray-700 hover:text-blue-600">
            <span>Courses</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24">
              <path d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-md opacity-0 group-hover:opacity-100 invisible group-hover:visible transition-all duration-200">
            <a href="/web" class="block px-4 py-2 hover:bg-gray-100">Shoe Making</a>
            <a href="/design" class="block px-4 py-2 hover:bg-gray-100">Bag Making</a>
            <a href="/marketing" class="block px-4 py-2 hover:bg-gray-100">Group Training</a>
          </div>
        </div>

        <a href="/contact" class="text-gray-700 hover:text-blue-600">Blog</a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="menu-btn"
          class="text-gray-700 hover:text-blue-600 focus:outline-none"
          onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
               stroke-width="2" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white shadow-lg">
    <a href="/" class="block px-4 py-2 border-b hover:bg-gray-100">Home</a>
    <a href="/about" class="block px-4 py-2 border-b hover:bg-gray-100">About</a>

    <details class="border-b">
      <summary class="px-4 py-2 cursor-pointer hover:bg-gray-100">Courses</summary>
      <div class="pl-4">
        <a href="/web" class="block px-4 py-2 hover:bg-gray-100">Shoe Making</a>
        <a href="/design" class="block px-4 py-2 hover:bg-gray-100">Bag Making</a>
        <a href="/marketing" class="block px-4 py-2 hover:bg-gray-100">Group Training</a>
      </div>
    </details>

    <a href="/contact" class="block px-4 py-2 hover:bg-gray-100">Contact</a>
  </div>
</nav>
